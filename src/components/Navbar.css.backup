/* ================================================
   BASE STYLES (MOBILE FIRST - 320px to 767px)
   ================================================ */
.navbar {
  /* Background and Spacing */
  background: var(--color-olive-green);
  color: var(--color-light-beige);
  padding: 0.75rem 1rem;


  /* Positioning */
  position: fixed;
  top: 0;
  z-index: 100;
}

.nav-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
}

.nav-menu {
  display: none;
  flex-direction: column;
  gap: 0.5rem;
}

.nav-link {
  color: var(--color-text-light);
  text-decoration: none;
  padding: 0.5rem 0;
  transition: color 0.3s ease;
}

.nav-logo {
  border: 3px dotted red;
  height: 50px;
  width: 50px;
}

.nav-logo img {
  height: 100%;
  width: 100%;
  /*height and width will fill to fit the nav-logo container, which contains the fixed size*/
}

.nav-title {
  font-size: 2rem;
  text-decoration: none;
  color: var(--color-light-beige);
}

.nav-menu {
  font-size: 1.5rem;
  display: flex;
  list-style: none;
  gap: 3rem;
}

.nav-link {
  text-decoration: none;
  color: var(--color-light-beige);
  transition: color 0.3s ease;
  position: relative;
  /*importante si se usan clave si m√°s adelante usas pseudoelementos como ::after o ::before.*/
}

.nav-link:hover {
  color: var(--color-accent-orange);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--color-accent-orange);
  transition: width 0.3s ease;
}

.nav-link:hover::after {
  width: 100%;
}


/* ================================================
   MEDIA QUERIES - TABLET (768px and up)
   ================================================ */
@media screen and (min-width: 768px) {
  .navbar {
    padding: 1rem 2rem;
  }

  .nav-menu {
    display: flex;
    flex-direction: row;
    gap: 2rem;
  }

  .nav-link {
    padding: 0.5rem 1rem;
  }

  .nav-link:hover {
    color: var(--color-accent-orange);
  }

}

/* ================================================
   MEDIA QUERIES - LAPTOP (1024px and up)
   ================================================ */
@media screen and (min-width: 1024px) {

  .navbar {
    padding: 1rem 3rem;
  }

  .nav-menu {
    gap: 3rem;
  }

}

/* ================================================
   MEDIA QUERIES - DESKTOP (1440px and up)
   ================================================ */
@media screen and (min-width: 1440px) {

  .navbar {
    padding: 1.5rem 4rem;
  }

}